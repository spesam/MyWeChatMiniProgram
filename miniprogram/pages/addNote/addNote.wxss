
page{
  width: 100%;
  height: 100%;
}
.comment{
  display:flex;
  width: 100%;
  height:100%;
  flex-direction: column;
}
.comment-uploader{
  flex:0 0 400rpx;
  padding:20rpx 20rpx 0;
}
.comment-uploader-thumbnail{
  width:100%;
  height:400rpx;
}
.comment-uploader-add{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color:#000;
  background-color:#f0e4e4;
  height: 400rpx;
}
.comment-uploader-add-icon{
  font-size: 200rpx;
  line-height: 1;
  margin-top:-40rpx;
}
.comment-text{
  flex:1;
  box-sizing:border-box;
  width:100%;
  font-size: 30rpx;
  padding:30rpx;
}

.comment-save{
  flex: 0 090rpx;
  margin:20rpx;
  background-color: #33c9ff;
}